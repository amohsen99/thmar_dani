<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Color Attribute -->
        <record id="product_attribute_color" model="product.attribute">
            <field name="name">Color</field>
            <field name="display_type">color</field>
            <field name="barcode_position">color</field>
            <field name="create_variant">always</field>
        </record>


        <!-- Grade Attribute -->
        <record id="product_attribute_grade" model="product.attribute">
            <field name="name">Grade</field>
            <field name="display_type">select</field>
            <field name="barcode_position">grade</field>
            <field name="create_variant">always</field>
        </record>

        <record id="product_attribute_design" model="product.attribute">
            <field name="name">Design</field>
            <field name="display_type">radio</field>
            <field name="barcode_position">design</field>
            <field name="create_variant">always</field>
        </record>

        <record id="product_attribute_product_type" model="product.attribute">
            <field name="name">Product Type</field>
            <field name="display_type">select</field>
            <field name="create_variant">always</field>
        </record>

    </data>
</odoo>

