<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add Barcode Code to Category Form View -->
    <record id="product_category_form_view_inherit_barcode" model="ir.ui.view">
        <field name="name">product.category.form.inherit.barcode</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="barcode_code" placeholder="e.g., CH, CO, ML"/>
            </xpath>
        </field>
    </record>

    <!-- Add Barcode Code to Category List View -->
    <record id="product_category_list_view_inherit_barcode" model="ir.ui.view">
        <field name="name">product.category.list.inherit.barcode</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_list_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_name']" position="after">
                <field name="barcode_code" optional="show"/>
            </xpath>
        </field>
    </record>

</odoo>

